          <section id="details-page">
                <article class="details-gage-title">
                    <h1>Details Page</h1>
                </article>
                <article class="details-page-card">

                    <article class="details-page-card-image">
                        <!-- Do not forget to change the path to the image -->
                        <img src="/static/img/man.png" alt="details-image">
                    </article>

                    <article class="details-page-card-content">
                        <p>Author: {{data.owner.email}}</p>
                        <h2>Headline: {{data.headline}}</h2>
                        <h3>Company name: {{data.companyName}}</h3>
                        <h4>Company description: {{data.companyDescription}}</h4>
                        <h5>Location: {{data.location}}</h5>

                        {{#if hasUser}}
                        <article class="details-page-card-buttons">
                            {{#if data.isOwner}}
                            <!--only for registered users and author of the ad-->
                            <a href="/edit/{{data._id}}" class="btn-edit">Edit</a>
                            <a href="/delete/{{data._id}}" class="btn-delete">Delete</a>
                            {{else}}
                            {{#if data.isApplied}}
                            <!--logged in user who has already applied for current ad-->
                            <p class="already-applied">You have already applied!</p>
                            {{else}}
                            <a href="/apply/{{data._id}}" class="btn-apply">Apply now!</a>
                            <p class="applied-people">Hurry up, {{data.applied.length}} people have already applied.</p>
                            {{/if}}
                            {{/if}}
                            {{/if}}
                            <!--logged in user who did not apply for current ad-->
                            

                            
                        </article>
                    </article>

                </article>
            </section>

            <!--This section should only be visible to the author of the current ad-->
                {{#if ad.isOwner}}
            <section id="info-about-candidates">
                <h2>Candidates for this ad:</h2>
                {{#if post.hasApplies}}
                <article class="info-about-candidates-card">
                    <h2>Email: {{ad.applied.email}}</h2>
                    <h3>Description of the candidate's skills: {{ad.applied.skills}}</h3>
                </article>
                {{/if}}
            </section>
            {{/if}}